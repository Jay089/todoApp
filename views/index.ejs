<%- include("./partials/header") %>
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="#">Todo App</a>
    </nav>
    <div class="container">
        <form action="add/todo" method="POST" class="d-flex">
            <input type="text" name="todo" placeholder="Enter Todo" class="form-control">
            <input type="submit" value="Add todo" class="btn btn-md btn-primary mx-3">

        </form>


        <ul class="list-group my-5">
            <% todo.forEach(todos=> { %>

                <li class="list-group-item">
                    <%= todos.todo %>
                    <a href="/delete/todo/<%= todos._id %>" class="btn btn-warning btn-sm " >Delete</a>
                </li>
                <% }) %>

        </ul>

    </div>


    <%- include("./partials/footer") %>